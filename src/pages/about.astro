---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import AceternityNavbar from '../components/AceternityNavbar.tsx';
import MarkdownRenderer from '../components/MarkdownRenderer.jsx';

const aboutCollection = await getCollection('about');
const aboutEntry = aboutCollection[0];
const markdownContent = aboutEntry.body;
---

<Layout title="About - New Cohorts">

    <!-- Enhanced Content with Beautiful Typography -->
    <main class="relative z-10 min-h-screen flex flex-col items-center px-6 py-12">
      <div class="max-w-4xl mx-auto pb-32 pt-20">
        <!-- Article Card -->
        <div class="bg-white/50 backdrop-blur-sm rounded-xl p-8 border border-white/20 shadow-lg">
          <div class="prose text-gray-900">
            <MarkdownRenderer content={markdownContent} client:load />
          </div>
        </div>
      </div>
    </main>

  <!-- Aceternity Floating Navbar -->
  <AceternityNavbar client:load />
</Layout>
