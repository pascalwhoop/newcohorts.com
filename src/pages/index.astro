---
import '../styles/global.css';
import { ExternalLink, Users, Instagram, Linkedin } from '@lucide/astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Join a 6-week cohort program to build lasting friendships in Amsterdam. Same group, every week, real connections." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>New Cohorts - Build Your Amsterdam Friend Group</title>
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      // @ts-ignore
      (window as any).dataLayer = (window as any).dataLayer || [];
      function gtag(...args: any[]){(window as any).dataLayer.push(args);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
      
      // Track CTA clicks
      document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target && target.matches('[data-track="cta"]')) {
          gtag('event', 'cta_click', {
            event_category: 'engagement',
            event_label: target.textContent || target.getAttribute('aria-label')
          });
        }
      });
    </script>
  </head>
  <body class="text-white font-sans">
    <!-- Background Image with Overlay -->
    <div class="fixed inset-0 z-0">
      <div 
        class="w-full h-full bg-cover bg-center bg-no-repeat"
        style="background-image: url('https://images.unsplash.com/photo-1580996378027-23040f16f157?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1064');"
      ></div>
      <div class="absolute inset-0 bg-black/60"></div>
    </div>

    <!-- Main Landing Page -->
    <main class="relative z-10 min-h-screen flex flex-col items-center justify-center px-6 py-12">
      <!-- Content Container -->
      <div class="text-center max-w-md mx-auto">
        <!-- Profile/Logo Section -->
        <div class="mb-8">
          <div class="w-24 h-24 bg-matcha/90 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
            <Users color="#F5F1ED" size={32} />
          </div>
          <h1 class="text-2xl font-bold text-white mb-2 drop-shadow-lg">New Cohorts</h1>
          <p class="text-gray-200 text-sm drop-shadow-md">Build your Amsterdam friend group</p>
        </div>
        
        <!-- Link Buttons -->
        <div class="space-y-4 mb-8">
          <!-- Primary CTA -->
          <a
            href="https://sink.newcohorts.com/signup"
            target="_blank"
            rel="noopener noreferrer"
            data-track="cta"
            class="block w-full bg-linear-to-r from-matcha to-sage text-cream px-6 py-4 rounded-xl text-lg font-semibold hover:from-matcha/90 hover:to-sage/90 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 border border-matcha/20"
          >
            Join the Next Cohort
          </a>
          
          <!-- About Link -->
          <a 
            href="/about" 
            class="block w-full bg-white/10 backdrop-blur-sm text-white px-6 py-4 rounded-xl text-lg font-medium border border-white/20 hover:bg-white/20 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            About Cohorts
          </a>
          
          <!-- Social Media Links -->
          <a 
            href="https://instagram.com/newcohorts.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-full bg-white/10 backdrop-blur-sm text-white px-6 py-4 rounded-xl text-lg font-medium border border-white/20 hover:bg-white/20 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center gap-3"
            aria-label="Follow us on Instagram"
          >
            <Instagram size={20} />
            <span>Instagram</span>
          </a>
          
          <a 
            href="https://linkedin.com/company/newcohorts" 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-full bg-white/10 backdrop-blur-sm text-white px-6 py-4 rounded-xl text-lg font-medium border border-white/20 hover:bg-white/20 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center gap-3"
            aria-label="Connect with us on LinkedIn"
          >
            <Linkedin size={20} />
            <span>LinkedIn</span>
          </a>
        </div>
        
        <!-- Quote Section -->
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 shadow-lg">
          <p class="text-gray-200 italic text-sm drop-shadow-md">"Amsterdam is amazing, but it's even better with your people"</p>
        </div>
      </div>
    </main>
  </body>
</html>
